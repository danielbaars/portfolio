block config

- var require = process.mainModule.require
- var fs = require("fs")
- var path = require("path")
- var project = path.dirname(process.argv.slice(-1).pop())
- var data = fs.readFileSync(path.join(project, "data.js"))

- eval(""+data)

doctype html
html.no-js(lang='en')
	block head
	head
		meta(charset='utf-8')
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name="description" content=metaDescription)
		meta(name='author' content=companyName)
		meta(name="robots" content="noindex, nofollow")
		title #{pageTitle}
		if bootstrap
			link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous")
		if online
			link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=" + googleFonts)
		if fontAwesome
			link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
		link(rel='stylesheet', href='css/app.css')
	body(class=bodyClass)
		block content
		if jQuery
			script(src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous")
			script(src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous")
		if bootstrapJS
			script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous")
		if online
			if mathJS
				script(src="https://cdnjs.cloudflare.com/ajax/libs/mathjs/3.11.5/math.min.js" type="text/javascript")
			if momentJS
				script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js" type="text/javascript")
				script(src="moment-timer.js" type="text/javascript")
		else
			if mathJS
				script(src="math.min.js" type="text/javascript")
			if momentJS
				script(src="moment.min.js" type="text/javascript")
				script(src="moment-timer.js" type="text/javascript")
		if foundation
			script(src='bower_components/jquery/dist/jquery.js')
			script(src='bower_components/what-input/dist/what-input.js')
			script(src='bower_components/foundation-sites/dist/js/foundation.js')
		script(src=jsFile)